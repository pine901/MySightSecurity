<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dp" />
            <stroke android:width="2dp" android:color="#606060" />
            <gradient android:angle="-90" android:startColor="#606060" android:endColor="#505050"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="#808080" />
            <solid android:color="#808080"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dp" />
            <stroke android:width="2dp" android:color="#707070" />
            <gradient android:angle="-90" android:startColor="#707070" android:endColor="#606060" />
        </shape>
    </item>
</selector>